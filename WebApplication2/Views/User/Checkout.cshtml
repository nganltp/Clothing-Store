                    <!-- Heading -->
                    @{
                        if (Model.order_items == null || Model.order_items.Count == 0)
                        {
                            <h6 class="mb-7">Order Items 0</h6>

                        }
                        else
                        {
                            <h6 class="mb-7">Order Items (@Model.order_items.Count)</h6>

                        }
                    }

                    <!-- Divider -->
                    <hr class="my-7">

                    <!-- List group -->
                    <ul class="list-group list-group-lg list-group-flush-y list-group-flush-x mb-7">
                        @{
                            if (Model.order_items != null)
                            {
                                foreach (var p in Model.order_items)
                                {
                                    <li class="list-group-item">
                                        <div class="row align-items-center">
                                            <div class="col-4">

                                                <!-- Image -->
                                                <a href="product.html">
                                                    <img src="@Model.images[Model.order_items.IndexOf(p)].content" alt="..." class="img-fluid">
                                                </a>

                                            </div>
                                            <div class="col">

                                                <!-- Title -->
                                                <p class="mb-4 font-size-sm font-weight-bold">
                                                    <a class="text-body" href="product.html">@p.name</a> <br>
                                                    <span class="text-muted">$@p.price</span>
                                                </p>

                                                <!-- Text -->
                                                <div class="font-size-sm text-muted">
                                                    Size: @Model.itemForms[Model.order_items.IndexOf(p)].size <br>
                                                    Quantity: @Model.itemForms[Model.order_items.IndexOf(p)].quantity
                                                </div>

                                            </div>
                                        </div>
                                    </li>
                                }

                            }
                        }


